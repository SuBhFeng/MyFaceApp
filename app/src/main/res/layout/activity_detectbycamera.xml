<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:package="com.example.myapplication"
    tools:context=".DetectByCamera"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <myapp.ui.LoginButton
            android:id="@+id/detectByCameraBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="拍照检测"
            >
        </myapp.ui.LoginButton>
        <myapp.ui.LoginButton
            android:id="@+id/detectByImageBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="选择照片检测"
            >
        </myapp.ui.LoginButton>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dbc"
        android:layout_width="match_parent"
        android:textSize="80px"
        android:layout_height="100px"
        >
    </TextView>

    <myapp.ui.MyImageView
        android:id="@+id/iv_registerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></myapp.ui.MyImageView>

</LinearLayout>
